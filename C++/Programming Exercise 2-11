#include <iostream>

using namespace std;                                   
 
int main()
{
    // Declare variables to store the fuel tank capacity and miles per gallon.
    double fuelTankCapacity;
    double milesPerGallon;

    // Prompt the user to enter the fuel tank capacity.
    cout << "Enter the fuel tank capacity in gallons: ";
    cin >> fuelTankCapacity; 
    cout << endl;

    // Prompt the user to enter the miles per gallon.
    cout << "Enter the miles per gallon: ";
    cin >> milesPerGallon;
    cout << endl;

    // Calculate and output the total number of miles the car can be driven on a full tank.
    cout << "The number of miles the car can be driven is "
         << fuelTankCapacity * milesPerGallon 
         << " miles." << endl;

    return 0;
}
